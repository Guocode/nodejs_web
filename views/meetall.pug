        .am-u-sm-3
            .wrapper2
                .content
                    div.infobar
                        button#match.am-btn.am-btn-primary(type='button', data-am-popover="{content: '配对玩家：超级锅', trigger: 'hover focus'}") Match
                        p.statusinfo
                    hr.hr0
                    .am-scrollable-vertical.right#msglist
                        li(v-for='msg in msgs')
