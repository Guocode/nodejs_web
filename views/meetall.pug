                                a(href='#link-to-user-home')
                                    img.am-comment-avatar(src='http://www.gravatar.com/avatar/1ecedeede84a44f371b9d8d656bb4265?d=mm&s=96', alt='', width='48', height='48')
                                .am-comment-main
                                    div.am-comment-hd
                                        .am-comment-meta
